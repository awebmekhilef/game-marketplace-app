<h2 class = 'my-4'>
	All games
</h2>

<% if(games.length === 0) { %>
	<p class = 'text-muted text-center mt-5'>No games to show</p>
<% } else { %>
	<div class = 'row'>
		<% games.forEach(game => { %>
			<div class = 'col-lg-3 col-md-4 col-sm-4 col-6'>
				<div class = 'card-transparent mb-4'>
					<a href = '/game/<%= game.id %>'>
						<div class = 'card-img-top'>
							<img class = 'img-fluid' src = '<%= game.cover %>'>
						</div>

						<h5 class = 'card-title text-dark mt-2'><%= game.title %></h5>
					</a>
				</div>
			</div>
		<% }) %>
	</div>
<% } %>
