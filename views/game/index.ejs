<div class = 'row'>
	<div class = 'col-lg-2'></div>
	<div class = 'col-lg-8'>
		<div class = 'row mt-5'>
			<div class = 'col-md-6'>
				<div class = 'card-transparent mb-4'>
					<div class = 'card-body'>
						<div class = 'text-center'>
							<img class = 'img-fluid' src = '<%= game.cover %>'>
						</div>

						<a href='https://storage.googleapis.com/game-marketplace.appspot.com/<%= game.gameFileLocation %>'
							 target='_blank' class='mt-3 btn btn-lg btn-primary btn-block' role='button'>Download</a>

						<p class = 'card-text mt-3'><small class = 'text-muted'>Genre: <%= game.genre.name %></small></p>
						<p class = 'card-text'><small class = 'text-muted'>Published:
								<% if(daysSincePublished === 0) { %>
									<span>Today</span>
								<% } else { %>
									<%= daysSincePublished %> day(s) ago
								<% } %>
							</small></p>
						<p class = 'card-text'><small class = 'text-muted'>Updated:
								<% if(daysSinceUpdated === 0) { %>
									<span>Today</span>
								<% } else { %>
									<%= daysSinceUpdated %> day(s) ago
								<% } %>
							</small></p>

						<a href = '/game/<%= game.slug %>/edit'>Edit</a>
					</div>
				</div>
			</div>

			<div class = 'col-md-6'>
				<h2 class = 'my-4'>
					<%= game.title %>
				</h2>

				<p><b><%= game.tagline %></b></p>
				<p class = 'text-justify'><%- game.markdown %></p>
			</div>
		</div>
	</div>
	<div class = 'col-lg-2'></div>
</div>
