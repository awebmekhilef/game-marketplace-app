<div class = 'row'>
	<div class = 'col-lg-2'></div>
	<div class = 'col-lg-8'>
		<div class = 'row mt-5'>
			<div class = 'col-md-6'>
				<div class = 'card-transparent mb-4'>
					<div class = 'card-body'>
						<div class = 'text-center'>
							<img class = 'img-fluid' src = '/img/coverImagePlaceholder.png'>
						</div>

						<button class = 'mt-3 btn btn-lg btn-primary btn-block'>Download</button>

						<p class = 'card-text mt-3'><small class = 'text-muted'>Genre: <%= game.genre.name %></small></p>
						<p class = 'card-text'><small class = 'text-muted'>Published: 7 days ago</small></p>
						<p class = 'card-text'><small class = 'text-muted'>Updated: 6 days ago</small></p>

						<a href = '/game/<%= game.id %>/edit'>Edit</a>
					</div>
				</div>
			</div>

			<div class = 'col-md-6'>
				<h2 class = 'my-4'>
					<%= game.title %>
				</h2>

				<p><b><%= game.tagline %></b></p>
				<p class = 'text-justify'><%= game.description %></p>
			</div>
		</div>
	</div>
	<div class = 'col-lg-2'></div>
</div>
