<div class = 'form-row'>
	<div class = 'col-md-8'>
		<div class = 'form-group'>
			<label class = 'form-label' for = 'title'>Title</label>
			<input class = 'form-control form-control-lg' id = 'title'
						 name = 'title' type = 'text' autocomplete = 'off' autofocus
						 value = '<%= game.title %>'>
		</div>

		<div class = 'form-group'>
			<label class = 'form-label' for = 'tagline'>Tagline</label>
			<input class = 'form-control' id = 'tagline'
						 name = 'tagline' type = 'text' autocomplete = 'off'
						 value = '<%= game.tagline %>'>
		</div>

		<div class = 'form-group'>
			<label class = 'form-label' for = 'genre'>Genre</label>
			<select class = 'custom-select' id = 'genre' name = 'genre'>
				<% genres.forEach(genre => { %>
					<% if(genre._id.equals(game.genre)) { %>
						<option selected value = '<%= genre._id %>'><%= genre.name %></option>
					<% } else { %>
						<option value = '<%= genre._id %>'><%= genre.name %></option>
					<% } %>
				<% }) %>
			</select>
		</div>

		<div class = 'form-group'>
			<label class = 'form-label' for = 'description'>Description</label>
			<textarea class = 'form-control' id = 'description' name = 'description'
								rows = '10'><%= game.description %></textarea>
		</div>

		<div class = 'custom-file'>
			<input name = 'gameFile' type = 'file' class = 'custom-file-input' id = 'gameFile'>
			<label class = 'custom-file-label' for = 'gameFile'>Upload file</label>
			<small class = 'form-text text-muted'>File size limit: 100MB</small>
		</div>
	</div>

	<div class = 'col-md-4' align = 'center'>
		<label align = 'left'>Cover image</label>
		<input id = 'file-pond' name = 'cover' type = 'file'>
		<p class = 'text-muted'>Aspect ratio: 63 x 50 (otherwise resized)</p>
	</div>
</div>